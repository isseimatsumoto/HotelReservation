<div class="container-field">
  <div class="row">

    <div class="room-user-view">
      <div class="room-user-view-box">
        <div class="update-content">
          <div>予約項目を入力する</div>
        </div>

        <%= form_with url: @reservation, url: {action: 'create'},local: true do |f| %>
          <% if @reservation.errors.any? %>
            <% @reservation.errors.full_messages. each do |msg| %>
              <%= msg %>
            <% end %>
          <% end %>

          <div class="update-content">
           <div class="registration-form-box">  
              <%= f.label :start_date ,"開始日",class: "registration-title"  %>
              <%= f.date_field :start_date ,class: "registration-form" %>
           </div>
          </div>
          <div class="update-content">
           <div class="registration-form-box"> 
              <%= f.label :end_date ,"終了日",class: "registration-title"  %>
              <%= f.date_field :end_date ,class: "registration-form"%>
           </div>
          </div>
          <div class="update-content">
           <div class="registration-form-box"> 
              <%= f.label :person_num ,"人数",class: "registration-title" %>
              <%= f.number_field :person_num ,class: "registration-form"%>
           </div>
          </div>

          <div class="update-content">
              <%= f.submit "上記の内容で予約する" ,class: "registration-form-btn"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>