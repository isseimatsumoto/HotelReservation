<div class="container-field room-posts">
  <div class="registration-room-list-title">登録済みルーム一覧</div>
      <table>
        <thead>
          <tr align="center">
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>料金</th>
            <th>作成日</th>
          </tr>
        </thead>
        <tbody>
          <% @user.rooms.each do |room| %>
            <tr>
              <td>
                <% if room.image.attached? %>
                  <%= image_tag room.image, class: "room-posts-image" %>
                <% end %>
              </td>
              <td class="room-posts-name"><%= room.name %></td>
              <td class="room-posts-introduction"><%= room.introduction %></td>
              <td class="room-posts-fee"><%= room.fee %>円</td>
              <td class="room-posts-created-at"><%= room.created_at.to_s(:datetime_jp) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>


