<div class="container">
  <div class="device-frame">
    <div class="user-login">ログイン</div>

      <div class="device-inner">
        <div class="users-form">
          <div class="form-body">

            <% if @error_message %>
                <div class="form-error">
                    <%= @error_message %>
                </div>
            <% end %>

            <%= form_tag("/login") do %>
              <div class="mandatory">
                <input name="email" placeholder="メールアドレス" class="user-address">
              </div>
              <div class="mandatory">
                <input type="password" name="password" placeholder="パスワード" class="user-password">
              </div>
                <input type="submit" value="ログイン">
            <% end %>
            <%= link_to("新しいアカウントを作成", "/signup",) %>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
